@{
  Layout = "_Layout";
}

<h1>Add a new Order to @Model.Name</h1>
<form action="/vendors/@Model.Id/orders" method="post">
  <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id" required="true">
  <label for="orderTitle">Order Title:</label>
  <input id="orderTitle" name="orderTitle" type="text" required="true"><br>
  <label for="orderDescription">Order Description:</label>
  <input id="orderDescription" name="orderDescription" type="text" required="true"><br>
  <label for="orderPrice">Order Price $:</label>
  <input id="orderPrice" name="orderPrice" type="number" placeholder="0.00" step="0.01" min="0" required="true"><br>
  <label for="orderDate">Order Delivery Date/Time:</label>
  <input id="orderDate" name="orderDate" type="datetime-local" required="true"><br>
  <button class="btn btn-warning" type='submit'>Add Item</button>
</form>